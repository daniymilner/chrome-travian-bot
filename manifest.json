{
	"manifest_version": 2,
	"name": "GoTravian",
	"version": "0.0.3",
	"description": "GoTravian",
	"author": "Sanya",
	"permissions": [
		"http://*/*",
		"unlimitedStorage"
	],
	"short_name": "GT",
	"content_scripts": [
		{
			"js": [
				"js/storage.js",
				"js/general.js",
				"js/task-list.js",
				"js/watcher.js"
			],
			"css": ["css/general.css"],
			"matches": ["http://*.travian.com.ua/*"],
			"run_at": "document_end"
		},
		{
			"js": [
				"js/pages/dorf1.js",
				"js/parser/dorf1.js"
			],
			"matches": ["http://*.travian.com.ua/dorf1.php*"],
			"run_at": "document_end"
		},
		{
			"js": [
				"js/pages/dorf2.js",
				"js/parser/dorf2.js"
			],
			"matches": ["http://*.travian.com.ua/dorf2.php*"],
			"run_at": "document_end"
		},
		{
			"js": [
				"js/pages/build.js"
			],
			"matches": ["http://*.travian.com.ua/build.php?id=*"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		"img/*.png"
	]
}